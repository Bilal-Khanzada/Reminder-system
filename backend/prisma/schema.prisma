generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reminder {
  id       String  @id @default(uuid())
  name     String
  email    String // New field: stores the customerâ€™s email address
  occasion String
  day      Int
  month    Int
  sent     Boolean @default(false) // New field: tracks if the email has been sent
}
